{
  "manifest_version": 2,
  "name": "Letterboxd Rutracker Checker",
  "version": "1.0",
  "description": "Проверяет наличие фильма на Rutracker прямо на странице Letterboxd",
  "permissions": [
    "*://rutracker.me/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}
