{
  "manifest_version": 2,
  "name": "Letterboxd Rutracker Checker",
  "version": "1.0",
  "description": "Проверяет наличие фильма на Rutracker прямо на странице Letterboxd",
  "browser_specific_settings": {
    "gecko": {
      "id": "letterboxd-rutracker-checker@vladik005",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "*://rutracker.me/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }
}
